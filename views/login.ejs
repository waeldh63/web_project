			  <!-- nav-toggler for mobile version only -->
			  <button class="nav-toggler">
				<span></span>
			  </button>

			</nav>
		</div>

  </div>
	<br> <br>
	<div class="col-md-4 col-md-offset-4">
		<div class="signup-content form-group">
			<div>
				<h2 class="form-title">Login</h2>
			</div>
			<form id="form" method="post" >
				<input type="text" name="email" placeholder="E-mail" required="" class="form-control"><br/>
				<input type="password" name="password" placeholder="Password" required="" class="form-control"><br/>
				<input type="submit" value="Login" class="form-submit">
			</form>
			<br>
			<div class="mssg" style="color: red;">
				<span id="check"></span>
			</div>
			<br>
			<div id="LangTable"><a href="/profile" id="aa"></a>
			</div>
			<div><span style="color: white;" class="loginhere">Forgot password? </span><a href="/forgetpass" class="loginhere-link">Click here</a>
			<div><span style="color: white;" class="loginhere">Create new Account? </span><a href="/register" class="loginhere-link">Register here</a>
	
			</div>
